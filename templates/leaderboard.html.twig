{% extends 'base.html.twig' %}

{% block title %}Leaderboard{% endblock %}


{% block body %}

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row justify-content-center align-items-center h-100"> {# Ajout de justify-content-center et align-items-center ici #}
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="mx-auto">
                <h6>LeaderBoard:</h6>
              <div>
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 text-center"> 
    </div>
    <hr>
      {% for user in users|sort((b, a) => a.pointTotal <=> b.pointTotal) %}
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">{{ user.username }}</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">{{ user.pointTotal }}</p>
            </div>
          </div>
        {% if loop.last == false %}
          <hr>
        {% endif %}
      {% endfor %}
    </div>
  </div>

{% endblock %}